{
  "name": "htmxproject",
  "version": "1.0.0",
  "description": "Building with HTMX",
  "watch": {
    "build:css": {
      "patterns": [
        "wwwroot/css",
        "Pages"
      ],
      "extensions": "css, cshtml",
      "runOnChangeOnly": true
    }
  },
  "scripts": {
    "dotnet-watch": "dotnet watch",
    "dotnet-build": "dotnet build",
    "build": "cross-env NODE_ENV=production && build:css",
    "build:css": "postcss ./wwwroot/css/site.css -o ./wwwroot/bundles/css/tailwind.css",
    "watch": "npm-watch"
  },
  "author": "Mirza Cupina",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^10.4.19",
    "cssnano": "^7.0.6",
    "postcss-cli": "^11.0.0",
    "postcss-nested": "^7.0.2",
    "tailwindcss": "^3.4.3"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "accordion-js": "^3.3.4",
    "cross-env": "^7.0.3",
    "htmx-ext-loading-states": "^2.0.0",
    "htmx.org": "^2.0.3",
    "npm-watch": "^0.13.0",
    "tailwind-scrollbar": "^3.1.0"
  }
}
